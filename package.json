{
  "name": "pocho",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/api",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @pocho/api",
    "dev": "npm run start:dev -w @pocho/api",
    "lint": "npm run lint -w @pocho/api",
    "format": "npm run format -w @pocho/api",
    "test": "npm run test -w @pocho/api",
    "test:e2e": "npm run test:e2e -w @pocho/api",
    "db:migrate": "npm run db:migrate -w @pocho/api",
    "db:seed": "npm run db:seed -w @pocho/api",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.1",
    "husky": "9.0.7",
    "lint-staged": "15.2.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --cache --fix",
    "*.{json,md,yml,yaml}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
